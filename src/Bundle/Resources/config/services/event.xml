<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- Novuso\Common\Domain\Messaging\Event\EventDispatcher -->
        <service id="novuso_common.event_dispatcher"
                 class="Novuso\Common\Application\Messaging\Event\ServiceAwareEventDispatcher">
            <argument type="service" id="novuso_common.service_container" />
        </service>

        <!-- Internal -->
        <service id="novuso_common.event_logger"
                 class="Novuso\Common\Application\Messaging\Event\Subscriber\EventLogger">
            <argument type="service" id="logger" />
            <tag name="novuso_common.event_subscriber" />
        </service>

    </services>
</container>
