<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- Novuso\Common\Application\Mail\MailService -->
        <service id="novuso_common.mail_service"
                 class="Novuso\Common\Adapter\Mail\SwiftMailer\SwiftMailerMailService">
            <argument type="service" id="mailer" />
        </service>

        <!-- Novuso\Common\Application\Mail\MailFactory -->
        <service id="novuso_common.mail_factory"
                 class="Novuso\Common\Adapter\Mail\SwiftMailer\SwiftMailerMailFactory" />

    </services>
</container>
