<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- Novuso\Common\Application\Http\Client\HttpAsyncClient -->
        <service id="novuso_common.http_async_client"
                 alias="novuso_common.http_client" />

        <!-- Novuso\Common\Application\Http\Client\HttpClient -->
        <service id="novuso_common.http_client"
                 class="Novuso\Common\Adapter\Http\Guzzle\GuzzleClient">
            <argument type="service" id="novuso_common.http_guzzle_client" />
        </service>

        <!-- Novuso\Common\Application\Http\Message\MessageFactory -->
        <service id="novuso_common.http_message_factory"
                 class="Novuso\Common\Adapter\Http\Guzzle\GuzzleMessageFactory" />

        <!-- Novuso\Common\Application\Http\Message\StreamFactory -->
        <service id="novuso_common.http_stream_factory"
                 class="Novuso\Common\Adapter\Http\Guzzle\GuzzleStreamFactory" />

        <!-- Novuso\Common\Application\Http\Message\UriFactory -->
        <service id="novuso_common.http_uri_factory"
                 class="Novuso\Common\Adapter\Http\Guzzle\GuzzleUriFactory" />

        <!-- Internal -->
        <service id="novuso_common.http_guzzle_client"
                 class="GuzzleHttp\Client"
                 public="false">
        </service>

    </services>
</container>
